<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hqbb.duanzi.activity.TopRankActivity">

    <include layout="@layout/common_toolbar" />

    <com.hqbb.duanzi.widget.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layerType="software">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="男生"
                android:textColor="@color/common_h1"
                android:textSize="18dp" />

            <com.hqbb.duanzi.widget.CustomExpandableListView
                android:id="@+id/elvMale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:childDivider="@drawable/shape_common_dash_divide"
                android:groupIndicator="@null"
                android:listSelector="@drawable/shape_common_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="女生"
                android:textColor="@color/common_h1"
                android:textSize="18dp" />

            <com.hqbb.duanzi.widget.CustomExpandableListView
                android:id="@+id/elvFeMale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:childDivider="@drawable/shape_common_dash_divide"
                android:groupIndicator="@null"
                android:listSelector="@drawable/shape_common_selector" />
        </LinearLayout>

    </com.hqbb.duanzi.widget.ReboundScrollView>

</LinearLayout>
